{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "manifest_version": 3,
  "version": "2.3.0",
  "default_locale": "en",
  "icons": {
    "16": "img/logo/16.png",
    "32": "img/logo/32.png",
    "48": "img/logo/48.png",
    "128": "img/logo/128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "activeTab"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}